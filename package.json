{
  "name": "short-cards",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "build": "npm run build -w @short-cards/shared && npm run build -w client && npm run build -w server",
    "start": "npm run start -w server",
    "clean": "rm -rf node_modules client/node_modules server/node_modules packages/shared/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
